<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    tools:context="com.example.programmers.fyp.UserInfo">

    <include
        android:id="@+id/include"
        layout="@layout/userinfoappbar" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/EditTextName"
        android:layout_alignBottom="@+id/EditTextName"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:text="Name : "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditTextName"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Date"
        android:layout_alignStart="@+id/Date"
        android:layout_below="@+id/include"
        android:layout_marginTop="53dp"
        android:hint="Your Name"
        android:inputType="textPersonName"
        android:digits="abcdefghijklmnopqrstuvwxyzQWERTYUIOPLKJHGFDSAZXCVBNM"/>

    <TextView
        android:id="@+id/dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/EditTextName"
        android:layout_marginTop="66dp"
        android:text="Date Of Birth :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:text="Gender :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#e53935"
        android:text="Submit"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Number"
        android:layout_alignStart="@+id/Number"
        android:layout_centerVertical="true">

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="116dp"
            android:layout_marginRight="116dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />
        </RadioGroup>
    </RelativeLayout>

    <EditText
        android:id="@+id/Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/contact"
        android:layout_alignBottom="@+id/contact"
        android:layout_alignLeft="@+id/Date"
        android:layout_alignStart="@+id/Date"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="10"
        android:hint="eg:345****"
        />

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/relativeLayout3"
        android:layout_marginTop="78dp"
        android:text="Contact No :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextName"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="51dp"
        android:layout_toEndOf="@+id/dob"
        android:layout_toRightOf="@+id/dob"
        android:ems="10"
        android:hint="Click To Select Date"
        android:inputType="textPersonName" />


</RelativeLayout>
